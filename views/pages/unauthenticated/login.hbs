<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../css/Registration.css">

    <title>Hail to the Proxy - Login</title>
</head>

<header>
  <h2>Login Page</h2>
</header>

<div class="container_Border">
<form id="login-form" method="POST" action="/api/users/login" enctype="application/x-www-form-urlencoded">
    <p id="Register">Log Into Account</p>

    <div id="UsernameDIV">
    <label>
      Username
    </label>
    <input type="text" id="username" name="username" placeholder="Enter Valid Username" required><br>
    </div>
    <br>

    <div id="PasswordDIV">
    <label>
       Password
    </label>
    <input type="password" id="user-password" name="password" placeholder="Enter Valid Password" required><br>
    </div>
    <br>
    
      <p id="Submit">Log In</p>
  <input type="image" id="PokerLogoSubmit" src="../public/css/fonts/LoginSignupLogo2.png" alt="Submit">
   <!-- <img id="PokerLogoSubmit" src="../public/css/fonts/LoginSignupLogo2.png"> -->
    
  </form>
</div>
 <div id="reg-space"></div>

 <!-- Confirm password matching -->
<script>
var password = document.getElementById("user-password");
var cpassword = document.getElementById("confirm-password");

document.querySelector("form").addEventListener("submit", 
function(event){
  if (password.value !== cpassword.value){
    event.preventDefault();
    alert("The password and confirm password do not match!")
  }else{
    alert("Sign-Up Successful");
  } 
});
</script>
